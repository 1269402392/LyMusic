page {
  color: white;
  padding: 0 50rpx;
}
.play-music {
  width: 100%;
  height: 100%;
}
.back-image,
.back-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.back-cover {
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(30px);
}
.tab {
  display: flex;
  font-size: 16px;
  color: #888888;
  justify-content: center;
}
.tab-active {
  color: white;
}
.drive {
  margin: 0 10px;
}
.cover-image {
  display: block;
  margin: 100rpx auto 0 auto;
  border-radius: 15rpx;
  width: 370px;
}
.play-info {
  color: #ddd;
}
.play-info .title {
  font-size: 25px;
  color: white;
  margin-top: 10px;
}
.play-info .author {
  margin: 10rpx 0;
}
.play-slider {
  margin: 6px 8px;
}
.resume {
  display: block;
  width: 70px;
  margin: 40px auto;
}
.lyric-list {
  height: 100%;
  padding-bottom: 100px;
  text-align: center;
}
.lyric-list .info:first-of-type {
  padding-top: 200px;
}
.lyric-list .info:last-of-type {
  padding-bottom: 200px;
}
.lyric-list .info {
  margin: 15px 0;
}
.time-section {
  display: flex;
  justify-content: space-between;
}
.active-song {
  color: rgb(15, 228, 15);
  font-size: 20px;
}
.arrow-icon {
  width: 44rpx;
}
